{
  "compilerOptions": {
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "outDir": "out",
    "rootDir": ".",
    "typeRoots": [
      "@types"
    ],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"],
      "@hello/*": ["src/hello/*"]
    },
    "target": "es5",
    "module": "commonjs",
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  }
}
